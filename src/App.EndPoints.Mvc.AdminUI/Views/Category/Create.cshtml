@model Category
<div class="row">
    <div class="col-4">
        <form asp-controller="Category" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for=Name></label>
                <input type="text" class="form-control" asp-for=Name>
            </div>
            <hr />
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label" asp-for=IsActive>غیر فعال</label>
                    <input class="form-check-input" type="radio" value="false" class="form-control" asp-for=IsActive>
                </div>
                <div class="form-check">
                    <label class="form-check-label" asp-for=IsActive>فعال</label>
                    <input class="form-check-input" type="radio" value="true" class="form-control" asp-for=IsActive>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for=DisplayOrder></label>
                <input type="number" class="form-control" asp-for=DisplayOrder>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for=ParentCagetoryId></label>
                <input type="number" class="form-control" asp-for=ParentCagetoryId>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for=CreationDate></label>
                <input type="date" class="form-control" asp-for=CreationDate>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">ایجاد</button>
        </form>
    </div>
</div>


