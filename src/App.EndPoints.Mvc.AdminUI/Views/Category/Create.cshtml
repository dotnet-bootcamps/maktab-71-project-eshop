@using App.EndPoints.Mvc.AdminUI.Models.ViewModels.Product
@model CategoryInputViewModel

@{
	ViewData["Title"] = "اضافه کردن دسته بندی جدید";
}

<h3>اضافه دسته بندی جدید</h3>
<form>

	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name">
	</div>

	<div class="form-group">
		<label asp-for="ParentCategoryId"></label>
		<input class="form-control" asp-for="ParentCategoryId">
	</div>

	<div class="form-group">
		<label asp-for="DisplayOrder"></label>
		<input class="form-control" asp-for="DisplayOrder">
	</div>

	<div style="float:left; margin-top:5px;">
		<button type="submit" class="btn btn-primary" asp-action="Create" formmethod="post">ایجاد</button>
		<button type="submit" class="btn btn-danger" asp-action="Index">انصراف</button>
	</div>

</form>