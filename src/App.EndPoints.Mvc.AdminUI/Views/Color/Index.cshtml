@model List<Color>
<a type="button" class="btn btn-success" asp-action="Create" asp-controller="Color">افزودن رنگ</a>
<table class="table table-hover">
    <tr>
        <th>شناسه</th>
        <th>نام</th>
        <th>رنگ</th>
        <th>عملیات</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td style="background-color:@item.Code;border-radius:10px"></td>

            <td>
                <a type="button" class="btn btn-warning" asp-action="Update" asp-controller="Color" asp-route-id="@item.Id">ویرایش</a>
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Color" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
    }
</table>
