@using App.Domain.Core.BaseData.Dtos
@model ColorDto

@{
	ViewData["Title"] = "حذف رنگ";
}

<h3>ویرایش رنگ</h3>
<form>

	<div class="form-group">
		<label asp-for="Id"></label>
		<input class="form-control" asp-for="Id" disabled>
	</div>

	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name" disabled>
	</div>

	<div class="form-group">
		<label asp-for="Code"></label>
		<input class="form-control" asp-for="Code" disabled>
	</div>

	<div style="float:left; margin-top:5px;">
		<button type="submit" class="btn btn-primary" asp-action="DeleteColor" asp-route-id="@Model.Id" formmethod="post">حذف</button>
		<button type="submit" class="btn btn-danger" asp-action="Index">انصراف</button>
	</div>

</form>