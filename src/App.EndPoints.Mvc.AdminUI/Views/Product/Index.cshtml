@model List<ProductDto>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">لیست محصولات</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Create"><i class="fas fa-plus">افزودن محصول</i></a>
        </div>
    </div>
    <br />
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-hover table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام محصول</th>
                    <th>قیمت</th>
                    <th>دسته بندی</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">@item.Id</td>
                        <td width="15%">@item.Name</td>
                        <td width="15%">@item.Price</td>
                        <td width="20%">@*@item.Category.Name*@</td>
                        <td width="20%">
                            <div class="w-75 btn-group " role="group">
                                <a asp-controller="Product" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary m-1 p-1"><i class="fas fa-edit">ویرایش</i></a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger m-1 p-1"><i class="far fa-trash-alt">حذف</i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>هنوز هیچج محصولی وارد سیستم نشده است</h1>
    }
</div>
