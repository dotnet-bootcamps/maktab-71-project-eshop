@model List<App.EndPoints.Mvc.AdminUI.Models.ViewModels.Product.ProductOutputViewModel>
@{
    ViewData["Title"] = "لیست محصولات";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">لیست محصولات</h2>
        </div>
        <div class="col-6 text-start">
            <a class="btn btn-success" asp-controller="Product" asp-action="Create"><i class="fas fa-plus"></i>ثبت محصول</a>
        </div>
    </div>
    <br/>
    <hr/>
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%">@item.Id</td>
                    <td width="15%">@item.Name</td>
                    <td width="15%">@item.Price</td>
                    <td width="20%">@item.CategoryId</td>

                    <td width="20%">
                        <div class="w-75 btn-group " role="group">
                            <a asp-controller="Product" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-warning m-1 p-1"><i class="fas fa-edit"></i>ویرایش</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger m-1 p-1"><i class="far fa-trash-alt"></i>حذف</a>
                        </div>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            <h3 class="alert-heading">رکوردی وجود ندارد!</h3>
            <p>شما می توانید با فشردن کلید ثبت رکورد جدیدی در دیتابیس ایجاد کنید</p>
            <hr>
            <p class="mb-0">با تشکر</p>
        </div>
    }


</div>