@using App.Domain.Core.Product.Entities

@model List<Product>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Create"><i class="fas fa-plus"></i></a>
        </div>
    </div>
    <br />
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td width="10%">@item.Id</td>
                                <td width="15%">@item.Name</td>
                                <td width="15%">@item.Price</td>
                                <td width="20%">@item.Category.Name</td>

                                <td width="20%">
                                    <div class="w-75 btn-group " role="group" >
                                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary m-1 p-1"><i class="fas fa-edit"></i>Edt</a>
                                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger m-1 p-1"><i class="far fa-trash-alt"></i>Delete</a>
                                    </div>
                                </td>

                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <h1>هنوز هیچج محصولی وارد سیستم نشده است</h1>
    }


</div>
