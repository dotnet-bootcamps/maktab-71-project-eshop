@using App.Domain.Core.Product.Dtos
@model ProductDTO
<form method="post" asp-controller="Product" asp-action="DeletePost">

    <input asp-for="Id" hidden />

    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Weight"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Count"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="CategoryId">Category</label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                            <option disabled selected>-- Select Category --</option>
                        </select>*@
                        <input asp-for="CategoryId" class="form-control" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="BrandId">Brand</label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="BrandId" class="form-control" asp-items="@ViewBag.Brands">
                            <option disabled selected>-- Select Brand --</option>
                        </select>*@
                        <input asp-for="BrandId" class="form-control" />
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="ModelId">Model</label>
                    </div>
                    <div class="col-8">
                        @*<select asp-for="ModelId" class="form-control" asp-items="@ViewBag.Models">
                            <option disabled selected>-- Select Model --</option>
                        </select>*@
                        <input asp-for="ModelId" class="form-control" />
                        <span asp-validation-for="ModelId" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group row p-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="حذف" class="btn btn-primary w-100" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"><i class="fas fa-sign-out-alt">بازگشت به لیست</i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
}

}