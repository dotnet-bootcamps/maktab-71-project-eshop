@model ColorViewModel

<form asp-controller="Colors" asp-action="SubmitUpdatedColor">
    <label asp-for="Id">Id:</label><br>
    <input type="text" value="@Model.Id" asp-for="Id" readonly><br>

    <label asp-for="Name">Name:</label><br>
    <input type="text" value="@Model.Name" asp-for="Name"><br>

    <label asp-for="Code">Code:</label><br>
    <input type="text" value="@Model.Code" asp-for="Code"><br>

    <input type="submit" class="btn btn-primary" value="Submit">
</form>