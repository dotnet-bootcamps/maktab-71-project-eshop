@using App.Domain.Core.BaseData.Entities


@model List<Color>

@{
    ViewData["Title"] = "Home Page";
}

<html>

    <head>
        <style>
            body {
                direction: rtl;
            }

            th {
                border-bottom: 2px solid black;
                border-collapse: collapse;
            }

            th, tr, td {
                padding: 4px;
                min-width: 100px;
            }
        </style>
    </head>

    <body>
        <table>
            <a type="button" class="btn btn-success" style="margin-bottom:8px" asp-action="Create" asp-controller="Colors">افزودن رنگ</a>
            <tr>
                <th>شناسه</th>
                <th>نام</th>
                <th colspan="3">عملیات</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a type="button" class="btn btn-primary" asp-action="Details" asp-controller="Colors" asp-route-id="@item.Id">مشاهده جزيیات</a></td>
                    <td><a type="button" class="btn btn-warning" asp-action="Edit" asp-controller="Colors" asp-route-id="@item.Id">ویرایش</a></td>
                    <td><a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Colors" asp-route-id="@item.Id">حذف</a></td>
                </tr>
            }
        </table>
    </body>

</html>