@using App.Domain.Core.BaseData.Dtos

@model ProductModelDto

@{
	ViewData["Title"] = "حذف مدل";
}

<h3>حذف مدل</h3>
<form>

	<div class="form-group">
		<label asp-for="Id"></label>
		<input class="form-control" asp-for="Id" disabled>
	</div>

	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name" disabled>
	</div>

	<div style="float:left; margin-top:5px;">
		<button type="submit" class="btn btn-primary"  asp-action="DeleteProductModel" asp-route-id="@Model.Id" formmethod="post">حذف</button>
		<button type="submit" class="btn btn-danger" asp-action="Index">انصراف</button>
	</div>

</form>