@model ModelInputViewModel


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Model" asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for=Name></label>
                <input type="text" class="form-control" asp-for=Name>
            </div>
            <div class="form-group">
                <label asp-for=ParentModelId></label>
                <input type="number" class="form-control" asp-for=ParentModelId>
            </div>
            <div class="form-group">
                <label asp-for=BrandId></label>
                <input type="number" class="form-control" asp-for=BrandId>
            </div>
            <button type="submit" class="btn btn-primary">ویرایش</button>
        </form>
    </div>
</div>


