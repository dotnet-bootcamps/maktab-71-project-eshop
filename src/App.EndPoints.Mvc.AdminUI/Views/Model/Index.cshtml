@using App.EndPoints.Mvc.AdminUI.Models.ViewModels.Product
@model List<ProductModelOutputViewModel>
@{
	ViewData["Title"] = "لیست مدل ها";
	int rowCount = 1;
}

<h3 style="float:right;">لیست مدل ها</h3>
<div style="float:left;">
	<a class="btn btn-success" asp-controller="Model" asp-action="Create">
		جدید
	</a>
</div>

<br>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">شناسه</th>
			<th scope="col">نام</th>
			<th scope="col">دسته بندی والد</th>
			<th scope="col">نام برند</th>
			<th scope="col">تاریخ ایجاد</th>
			<th scope="col">عملیات</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var productModel in Model)
		{
			<tr>
				<th scope="row">
					@rowCount
				</th>
				<td>@productModel.Id</td>
				<td>@productModel.Name</td>
				<td>@productModel.ParentModelId</td>
				<td>@productModel.BrandName</td>
				<td>@productModel.CreationDate</td>
				<td>
					<a class="btn btn-primary" asp-controller="Model" asp-action="Update" asp-route-id=@productModel.Id>
						ویرایش
					</a>
					|
					<a class="btn btn-danger" asp-controller="Model" asp-action="Delete" asp-route-id="@productModel.Id">
						حذف
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>