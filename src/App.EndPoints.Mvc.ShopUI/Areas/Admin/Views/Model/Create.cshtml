@model ModelAddViewModel




<div class="row">
    <div class="col-md-4">
        <form asp-controller="Model" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for=Name></label>
                <input type="text" class="form-control" asp-for=Name>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for=ParentModelId></label>
                <select asp-for="ParentModelId"  class="form-control" asp-items="@ViewBag.Models">
                        <option selected value="0">بدون والد</option>
                    </select>
                    <span asp-validation-for="ParentModelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for=BrandId></label>
                <select asp-for="BrandId"  class="form-control" asp-items="@ViewBag.Brands">
                        <option selected disabled>انتخاب کنید</option>
                    </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
          


            <button type="submit" class="btn btn-primary">ایجاد</button>
        </form>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}


