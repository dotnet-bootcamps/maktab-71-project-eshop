@model App.EndPoints.Mvc.AdminUI.Models.ViewModels.Product.BrandAddViewModel

@{
	ViewData["Title"] = "اضافه کردن برند جدید";
}

<h3>اضافه کردن برند جدید</h3>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-area="admin" asp-controller="brand" asp-action="Create">

	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name">
		<span asp-validation-for="Name" class="text-danger"></span>		
	</div>

	<div class="form-group">
		<label asp-for="DisplayOrder"></label>
		<input class="form-control" asp-for="DisplayOrder">
		<span asp-validation-for="DisplayOrder" class="text-danger"></span>
	</div>

	<div class="d-flex flex-row justify-content-end">
        <button type="submit" class="btn btn-primary mx-1" >ایجاد</button>
        <button type="submit" class="btn btn-danger" asp-action="Index">انصراف</button>
    </div>

</form>

@section Scripts{
        <partial name="_ValidationScriptsPartial" /> 
}