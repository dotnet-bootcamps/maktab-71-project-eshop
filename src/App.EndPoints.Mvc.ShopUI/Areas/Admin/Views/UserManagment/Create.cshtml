

<form asp-controller="UserManagment" asp-action="Create" method="post">

    <div>
        <label>یوزر نیم</label>
        <input name="username" />
    </div>

    <div>
        <label>ایمیل</label>
        <input name="email" type="email"  />
    </div>

    <div>
        <label>پسوورد</label>
        <input name="password" type="password" />
    </div>

    <div>
        <label>نقش</label>
        <select name="roles" multiple asp-items="@ViewBag.Roles">
            @if(@ViewBag.Roles != null)
            {
                <option selected value="0">انتخاب نقش</option>
            }
            
        </select>
    </div>


    <input type="submit" class="btn btn-primary" />

</form>