@model IEnumerable<ColorOutputViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<html>

    <head>
        <style>
            body {
                direction: rtl;
            }

            th {
                border-bottom: 2px solid black;
                border-collapse: collapse;
            }

            th, tr, td {
                padding: 4px;
                min-width: 100px;
            }
        </style>
    </head>

    <body>
        <table>
            <a type="button" class="btn btn-success" style="margin-bottom:8px" asp-action="Create" asp-controller="Color">افزودن رنگ</a>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <th colspan="3">عملیات</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td style="background-color:@item.Code;">@item.Code</td>
                    <td><a type="button" class="btn btn-warning" asp-action="Update" asp-controller="Color" asp-route-id="@item.Id">ویرایش</a></td>
                    <td><a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Color" asp-route-id="@item.Id">حذف</a></td>
                </tr>
            }
        </table>
    </body>

</html>